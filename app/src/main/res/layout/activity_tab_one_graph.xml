<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tab_one_graph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/graph_background"
    tools:context="com.example.jb.bluetooth.TabOneGraph">


        <TextView
            android:text="Reset Zoom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/resettxt"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:onClick="reset_zoom"
            android:layout_weight="1" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </com.github.mikephil.charting.charts.LineChart>


</LinearLayout>
