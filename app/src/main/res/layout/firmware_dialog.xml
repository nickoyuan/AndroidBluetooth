<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_height="match_parent">

    <TextView
        android:text="Change the Firmware of M100?"
        android:gravity="left"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#212121"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView38" />

    <TextView
        android:text="Warning ! Updating the Firmware of M100 may change the behaviour of the Device. Make sure you do not switch off the Phone or M100."
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:textSize="16sp"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView40" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:text="EXIT NOW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncancel"
            android:textSize="18sp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textColor="#2196F3"
            android:layout_weight="1" />

        <TextView
            android:gravity="center"
            android:text="Start"
            android:textSize="18sp"
            android:textColor="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnstart"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>